<package>
    <id>com.nicho1as.roundccmodules</id>
    <name>RoundCCModules</name>
    <version>1.1.2</version>
    <compatibility>
        <firmware>
            <miniOS>13.0</miniOS>
        </firmware>
    </compatibility>
    <dependencies>
        <package>mobilesubstrate</package>
    </dependencies>
    <shortDescription>Rounded control center modules for a cleaner look?</shortDescription>
    <descriptionlist>
        <description>Compatible with iOS 13 only.</description>
        <description>Options to configure from settings, more settings to customize soon!</description>
        <description>Custom corner radius for compact modules and expanded modules!</description>
        <description>Custom color for the modules!</description>
        <description>BUGS MAY EXIST!</description>
    </descriptionlist>
    <screenshots>
        <screenshot>
            <image>CC.jpg</image>
        </screenshot>
        <screenshot>
            <description>Custom colors set to random!</description>
            <image>CCcolors.jpg</image>
        </screenshot>
        <screenshot>
            <image>volumeExpanded.jpg</image>
        </screenshot>
        <screenshot>
            <image>cameraExpanded.jpg</image>
        </screenshot>
        <screenshot>
            <description>Custom corner radius set to 0</description>
            <image>0cornerCC.jpg</image>
        </screenshot>
        <screenshot>
            <description>Custom corner radius set to 0</description>
            <image>0cornerCamera.jpg</image>
        </screenshot>
    </screenshots>
    <changelog>
        <change>Added optional custom color for the modules!</change>
        <change>Added random colors for the modules.</change>
        <change>Added custom color alpha for the modules.</change>
        <change>And more! See the full changelog for all changes.</change>
    </changelog>
    <links>
        <link>
            <name>@itsnicho1as on Twitter</name>
            <url>https://www.twitter.com/itsnicho1as</url>
            <iconclass>fa fa-twitter</iconclass>
        </link>
    </links>
</package>
