	<name>Konban for iOS 13</name>
	<version>0.3.0-b2</version>
	<compatibility>
		<firmware>
			<miniOS>13</miniOS>
		</firmware>
	</compatibility>
	<dependencies>
		<package>mobilesubstrate</package>
